<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/aaaa"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fav_item_height"
    android:clickable="true"
    android:layout_margin="@dimen/fav_item_layout_margin"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/iv_fav_icon"
        android:layout_width="@dimen/fav_item_icon_width_height"
        android:layout_height="@dimen/fav_item_icon_width_height"
        android:contentDescription="@string/fav_item_icon_description"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_star_black_24dp"/>
    <LinearLayout
        android:layout_width="@dimen/fav_item_input_layout_width"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <TextView
            android:paddingTop="10dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textStyle="bold"
            android:singleLine="true"
           />
        <TextView
            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:paddingBottom="10dp"
            android:id="@+id/tv_descr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fav_item_input_text_size"
            android:textStyle="normal" />
    </LinearLayout>
    <ImageView
        android:id="@+id/favourite_image_view"
        android:contentDescription="@string/fav_item_icon2_description"
        android:layout_width="@dimen/fav_item_icon_width_height"
        android:layout_height="@dimen/fav_item_icon_width_height"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/fav_item_icon_margin_left_right"
        android:layout_marginEnd="@dimen/fav_item_icon_margin_left_right"
        android:background="@android:color/white"
        android:src="@drawable/ic_more_vert_black_24dp"
        />
</RelativeLayout>